<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f80606">

    <LinearLayout
        style="@style/Theme.AppCompat.Light.NoActionBar"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1d1d1d" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.35" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/textView7"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:textColor="#55c1b7"
                android:textSize="25sp"
                android:textIsSelectable="false"
                android:textAlignment="center"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView8"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textColor="#53c0b6"
                android:textSize="25dp"
                android:gravity="center_vertical" />
        </LinearLayout>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample"
            android:id="@+id/switch4"
            android:checked="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:onClick="onclswitch"
            android:textOn="Normal"
            android:textOff="Advanced"
            android:textAlignment="center"
            android:textColor="#ffffff" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4"
                android:background="#52c0b6">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="i"
                    android:onClick="onclinfor"
                    android:id="@+id/button"
                    android:layout_weight="1"
                    android:background="#53c0b6"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="C"
                    android:onClick="onclclear"
                    android:id="@+id/button60"
                    android:layout_weight="2"
                    android:background="#52c0b6"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:onClick="onclback"
                    android:id="@+id/button61"
                    android:background="@drawable/del"
                    android:clickable="true"
                    android:textSize="25dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4"
                android:background="#52c0b6">



                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Sin"
                    android:id="@+id/button83"
                    android:layout_weight="1"
                    android:background="#52c0b6"
                    android:clickable="true"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Cos"
                    android:id="@+id/button84"
                    android:layout_weight="1"
                    android:background="#52c0b6"
                    android:clickable="true"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Tan"
                    android:id="@+id/button85"
                    android:layout_weight="1"
                    android:background="#52c0b6"
                    android:clickable="true"
                    android:textSize="25dp" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton"
                    android:background="@drawable/microphone"
                    android:layout_weight="1"
                    android:adjustViewBounds="false" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="right"
                android:layout_weight="1" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="^"
                    android:onClick="onclpow"
                    android:id="@+id/button78"
                    android:layout_weight="1"
                    android:background="#52c0b6"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:onClick="onclseven"
                    android:id="@+id/button62"
                    android:layout_weight="1"
                    android:background="#232323"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:onClick="oncleight"
                    android:id="@+id/button63"
                    android:layout_weight="1"
                    android:background="#232323"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:onClick="onclnine"
                    android:id="@+id/button64"
                    android:layout_weight="1"
                    android:background="#232323"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="/"
                    android:onClick="oncldiv"
                    android:id="@+id/button65"
                    android:layout_weight="1"
                    android:background="#52c0b6"
                    android:clickable="true"
                    android:textSize="25dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="right"
                android:layout_weight="1" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="N!"
                    android:onClick="onclfact"
                    android:id="@+id/button80"
                    android:layout_weight="1"
                    android:background="#52c0b6"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:onClick="onclfour"
                    android:id="@+id/button66"
                    android:layout_weight="1"
                    android:background="#232323"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:onClick="onclfive"
                    android:id="@+id/button67"
                    android:layout_weight="1"
                    android:background="#232323"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:onClick="onclsix"
                    android:id="@+id/button68"
                    android:layout_weight="1"
                    android:background="#232323"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="x"
                    android:onClick="onclmulti"
                    android:id="@+id/button69"
                    android:layout_weight="1"
                    android:background="#52c0b6"
                    android:clickable="true"
                    android:textSize="25dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="right"
                android:layout_weight="1" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="("
                    android:onClick="onclop"
                    android:id="@+id/button81"
                    android:layout_weight="1"
                    android:background="#52c0b6"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:onClick="onclone"
                    android:id="@+id/button70"
                    android:layout_weight="1"
                    android:background="#232323"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:onClick="oncltwo"
                    android:id="@+id/button71"
                    android:layout_weight="1"
                    android:background="#232323"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:onClick="onclthree"
                    android:id="@+id/button72"
                    android:layout_weight="1"
                    android:background="#232323"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:onClick="onclmin"
                    android:id="@+id/button73"
                    android:layout_weight="1"
                    android:background="#52c0b6"
                    android:clickable="true"
                    android:textSize="25dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="right"
                android:layout_weight="1" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=")"
                    android:onClick="onclclo"
                    android:id="@+id/button82"
                    android:layout_weight="1"
                    android:background="#52c0b6"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="."
                    android:onClick="oncldot"
                    android:id="@+id/button74"
                    android:layout_weight="1"
                    android:background="#232323"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:onClick="onclzero"
                    android:id="@+id/button75"
                    android:layout_weight="1"
                    android:background="#232323"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="="
                    android:onClick="onclequel"
                    android:id="@+id/button76"
                    android:layout_weight="1"
                    android:background="#ad2222"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:onClick="onclplus"
                    android:id="@+id/button77"
                    android:layout_weight="1"
                    android:background="#52c0b6"
                    android:clickable="true"
                    android:textSize="25dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
